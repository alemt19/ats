{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "react": [
        "./node_modules/@types/react/index.d.ts"
      ],
      "react-dom": [
        "./node_modules/@types/react-dom/index.d.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}